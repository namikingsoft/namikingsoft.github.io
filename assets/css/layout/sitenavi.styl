.layout-sitenavi
  background-color $navbar-background-color
  color $navbar-font-color

  .container
    position relative
    max-width $main-width
    height $navbar-height

  a
    color $navbar-font-color

    &:hover
      text-decoration none

  &__title
    display inline-block
    margin-top 16px

    a
      display block
      text-align center
      transition opacity 0.1s linear

      strong
        display block
        font-size 26px
        font-family: Georgia
        letter-spacing  -1px
        font-weight bold
        line-height 1.4
        color $navbar-title-color
        &:first-letter
          color $main-color
          font-size 1.15em
          text-shadow 0px 0px 2px #ddd

      p
        display block
        line-height 1.4
        font-size 12px

      &:hover
        opacity 0.5

  &__menu
    display inline-block
    position absolute
    top 0
    right 0
    font-size 14px
    font-family Eau Douce,Helvetica Neue,Calibri,Emoji,sans-serif
    margin-top 26px
    @media (max-width: $screen-width-xs)
      font-size 24px
      margin-top 16px

    ul
      list-style none
      margin 0
      padding 0

      li
        display: inline-block
        margin 0
        padding 0

        a
          display block
          padding 7px 10px
          border-radius 20px
          transition background 0.2s linear
          @media (max-width: $screen-width-sm)
            padding-left 5px

          i
            margin-right 5px

          span
            @media (max-width: $screen-width-xs)
              display none

          &:hover
            @media (min-width: $screen-width-xs)
              background-color $navbar-hover-background-color
              text-decoration none
