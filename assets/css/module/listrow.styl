.module-listrow
  position relative
  border-bottom 1px dotted #ccc
  &:last-child
    border-bottom 0px

  article
    padding-top 20px
    padding-bottom 20px
    font-size 16px

  a
    display block
    color #555
    &:hover
      text-decoration none
      color $text-link-color

  &__datetime
    color #aaa
    i
      margin-right 0.5em

  &__title
    h3
      font-size 1.15em
      line-height 1.4
