.module-listrow
  margin-bottom 20px
  padding-bottom 20px
  border-bottom 2px dotted #ccc
  font-size 16px
  &:last-child
    border-bottom 0px

  &__title
    h3
      line-height 1.6
      font-size 1.15em
      a
        &:hover
          text-decoration underline

  &__datetime
    display inline-block
    min-width 169px

    i
      margin-right 0.5em

  &__taxonomies
    display inline-block

    ul
      display inline-block
      margin 0
      padding 0
      list-style none

      li
        display inline-block
        margin-right 0.5em

        a
          white-space nowrap
          color #fff
          text-decoration none
          white-space nowrap
