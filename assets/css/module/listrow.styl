.module-listrow
  margin-bottom 20px
  padding-bottom 20px
  border-bottom 1px dashed #bbb
  font-size 16px
  &:last-child
    border-bottom 0px

  &__datetime
    display inline-block
    min-width 175px

    i
      margin-right 0.5em

  &__taxonomies
    display inline-block

    ul
      display inline-block
      margin 0
      padding 0
      list-style none

      li
        display inline
        margin-right 0.5em

        a
          white-space nowrap
          color #fff
          text-decoration none
          white-space nowrap
