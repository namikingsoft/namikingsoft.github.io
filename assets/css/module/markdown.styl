.module-markdown
  word-wrap break-word

  h1, h2, h3, h4, h5, h6
    margin-top 2.5em
    margin-bottom 0.75em

  h4, h5, h6
    font-weight bold

  h2
    padding 0.8em
    border-left 5px solid #555
    border-radius 3px
    background-color #eee
    font-size 1.7em

  h3
    padding 0.6em 0.4em
    font-size 1.5em
    border-top 1px solid #aaa
    border-bottom 1px solid #aaa
    background-color #fafafa

  h4
    font-size 1.25em
    padding-bottom 0.2em

  h5
    font-size 1.1em

  p
    margin 0
    padding 0
    margin-bottom $markdown-margin-bottom

  pre
    padding 0
    border-radius 0
    border 0
    margin-bottom $markdown-margin-bottom
    code
      padding 1.4em

  blockquote
    position relative
    margin 0
    margin-bottom $markdown-margin-bottom
    padding 1em 1em 1em 3em
    border-left 0.75em solid #ddd
    background-color #eee
    &:before
      content '“'
      position absolute
      font-size 4.5em
      line-height 1em
      color #999
      left 0.1em
      top 0.1em

  img
    max-width 100%
    text-align center

  a
    &[rel="footnote"]
      font-size 1.2em
      &:before
        content '*'

  .footnotes
    margin-top 50px
    padding 20px
    background-color #eee
    position relative
    hr
      display none
    ol:before
      content '脚注'
      font-size 1.1em
      font-weight bold
      margin-left -1.5em
      line-height 2.5
