.module-markdown
  word-wrap break-word

  h1, h2, h3, h4, h5, h6
    margin-top 2.8em
    margin-bottom 0.75em
    line-height 1.4

  h4, h5, h6
    font-weight bold

  h2
    padding 0.8em
    border 1px solid #888
    border-radius 3px
    background-color #f5f5f5
    font-size 1.75em

  h3
    font-size 1.65em
    font-weight bold
    padding-bottom 0.45em
    border-bottom 2px dotted #999
    padding-left 1.65em
    position relative
    &:before
      content '\002714'
      position absolute
      top -6px
      left 0
      color $main-color
      font-size 1.35em

  h4
    font-size 1.35em
    padding-bottom 0.2em

  h5
    font-size 1.1em

  p
    margin 0
    padding 0
    margin-bottom $markdown-margin-bottom
    img
      display block
      margin 3em auto !important

  pre
    padding 0
    border-radius 0
    border 0
    margin-bottom $markdown-margin-bottom
    code
      padding 1.4em
      // don't auto break
      word-wrap normal
      white-space pre

  blockquote
    position relative
    margin 0
    margin-bottom $markdown-margin-bottom
    padding 1em 1em 1em 3em
    border-left 0.75em solid #ddd
    background-color #f5f5f5
    &:before
      content '“'
      position absolute
      font-size 4.5em
      line-height 1em
      color #999
      left 0.1em
      top 0.1em

  ul
    margin-bottom 30px

  img
    max-width 100%
    text-align center

  a
    &[rel="footnote"]
      font-size 1.2em
      font-weight bold
      &:before
        content '*'

  table
    border 1px solid #ccc
    margin 2em 0
    tr
      th
        background-color #eaeaea
      th, td
        border 1px solid #ccc
        padding 0.5em
      td
        background-color #fff


  .footnotes
    margin-top 50px
    padding 20px
    background-color #eee
    position relative
    hr
      display none
    ol
      li
        margin-bottom 0.65em
      &:before
        content '脚注'
        font-size 1.1em
        font-weight bold
        margin-left -1.5em
        line-height 2.65
